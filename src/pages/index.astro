			<p><a href="tel:+4540403160">+45 40 40 31 60</a></p>
		</div>
	
	</div>


</div>








</MainLayout>





<style>
	h1 {
		font-family: Aviano;
		font-size: 3rem;
		text-align: center;
		font-weight: 100;
		margin-bottom: 20px;
	}

	h2 {
		font-family: Aviano;
		font-size: 2.6rem;
		font-weight: 100;
		margin-bottom: 20px;
		color: var(--text-orange);
		padding-left: 20px;

	}

	.frontpage_banner_img {
		width: 100%;

	}

	.orange_divide {
			border-bottom: solid 1px var(--text-orange);
			padding-top: 30px;
		}

	.section1 {
		padding-bottom: 40px;
	}

	.section1 p {
		font-size: 1.2rem;
		font-family: Georgia;
		padding-bottom: 30px;
		padding-left: 20px;
		padding-right: 20px;
		line-height: 1.3;
	}

	.icons {
		display: flex;
		flex-direction: row;
		padding-top: 30px;
		padding-bottom: 30px;
		padding-left: 20px;
		justify-content: center;
		gap: 10px;
	}

	.icons a {
		font-size: 1rem;
		text-align: center;
		text-decoration: none;
		color: var(--text-black);
		text-align: center;
	}

	.icons p {
		padding-left: 7px;
		text-align: center;
	}

	.facebook_img, .instagram_img {
		width: 100px;
	}

	.mark_img {
		width: 100%;
	}

	.section2 {
		text-align: center;
		padding-bottom: 60px;
	}

	.section2 h2 {
		padding-bottom: 10px;
	}
	

	.event {
		padding-left: 20px;
		padding-right: 20px;
		padding-bottom: 50px;
	}

	.calender_box {
		border: solid 1px var(--text-orange);
		width: 90px;
		height: 100px;
		background-color: var(--text-lightorange);
		font-family: Aviano;
		color: var(--text-orange);
		margin: auto;
		text-align: center;
		box-shadow: 3px 3px 7px gray;
	}

	.calender_box p {
		font-size: 1.3rem;
		padding-top: 13px;
	}

	.calender_box h4 {
		margin-top: -10px;
		font-size: 3.8rem;
		font-weight: 100;
	}

	.calender_event p {
		text-align: center;
		color: var(--text-darkbrown);
		font-family: Georgia;
		padding-top: 20px;
		font-size: 1.2rem;
	}

	.calender_event h3 {
		text-align: left;
		color: var(--text-black);
		font-family: Aviano;
		padding-top: 10px;
		font-size: 1.9rem;
	}

	.section2 a {
		border: solid 1px var(--text-orange);
		padding-top: 5px;
		padding-bottom: 5px;
		padding-left: 40px;
		padding-right: 40px;
		font-family: Aviano;
		color: var(--text-orange);
		border-radius: 5px;
		text-decoration: none;
		font-size: 1.3rem;
	}

	.products_img {
		display: grid;
    	grid-template-columns: repeat(auto-fill,minmax(169px,169px));
    	gap: 10px;
    	justify-content: center;
		padding-top: 30px;
    	padding-bottom: 5px;
		margin: auto;
	}

	.products_img img {
		width: 100%;
	}

	.section3 {
		text-align: center;
		padding-bottom: 20px;

	}

	.animation_div {
		display: grid;
		grid-template-columns: repeat(3,1fr);
	}


	.section3 a {
		font-family: Aviano;
		color: var(--text-beige);
		text-decoration: none;
		font-size: 1.4rem;
		grid-column: 2/3;
		grid-row: 1/1;
		z-index: 2;
		padding-top: 58px;
	}

	.section_testi {
        padding-top: 30px;
        padding-left: 20px;
        padding-right: 20px;
        margin: auto;
    }


	.section4 {
		display: flex;
		flex-direction: column;
		gap: 50px;
		padding-left: 50px;
    	padding-right: 50px;
		padding-top: 30px;
		padding-bottom: 60px;
		text-align: center;
	}

	.section4 img {
		width: 100px;
	}

	.section4 h5 {
		font-family: Aviano;
		font-size: 1.3rem;
		padding-top: 5px;
	}

	.section4 p {
		font-family: Georgia;
		font-size: 1rem;
		color: var(--text-darkbrown);
		padding-top: 5px;
	}

	.section5 h2 {
		text-align: center;
    	padding-left: 45px;
    	padding-right: 45px;
    	padding-top: 70px;
	}

	.section5 img {
		width: 100%;
	}

	.section5_div {
		display: flex;
		flex-direction: column;
		gap: 30px;
		text-align: center;
		padding-top: 30px;
		padding-bottom: 80px;
	}

	.section5 h4 {
		font-size: 1.9rem;
		font-family: Aviano;
		color: var(--text-orange);
	}

	.section5 p {
		font-size: 1.2rem;
		font-family: Georgia;
		color: var(--text-black);
	}

	.section5 a {
		text-decoration: none;
		color: var(--text-black);
	}



	@media (min-width: 900px) {


		.frontpage_banner {
			display: grid;
			grid-template-columns: repeat(3,1fr);
			padding-top: 10px;
		}


		.frontpage_banner_img {
			grid-column: 1/4;
			grid-row: 1/1;
		}

		.frontpage_banner h1 {
			grid-column: 2/3;
			grid-row: 1/1;
			z-index: 1;
			padding-top: 100px;
			font-size: 5rem;
		}
	

		.section1 {
			display: grid;
			grid-template-columns: 1fr 1fr;
			margin: auto;
			max-width: 1000px;
			gap: 50px;
		}

		.section1 p {
			font-size: 1.5rem;
		}

		.orange_divide {
			padding-top: 70px;
			padding-bottom: 30px;
		}

		.icons {
			justify-content: left;
		}

		.section2 {
			max-width: 1000px;
			margin: auto;
		}

		.event {
			display: flex;
			flex-direction: row;

		}

		.calender_event {
			width: 70%;
		}

		.calender_event p {
			text-align: left;
		}


		.products_img {
			width: 1000px;
			grid-template-columns: repeat(auto-fill,minmax(235px,235px));
		}

		.section3 a {
			padding-top: 16%;
	    	font-size: 2.1vw;
		}

		.section_testi {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            max-width: 1000px;
            padding-top: 20px;
        }

	.section4 {
		flex-direction: row;
		justify-content: center;
		align-items: flex-end;
		padding-left: 50px;
    	padding-right: 50px;
		padding-top: 0px;
		padding-bottom: 50px;
		gap: 50px;
	}

	.section4_div {
		width: 235px;
	}

	.section5 {
		margin: auto;
		text-align: center;
	}

	.section5 img {
		max-width: 1000px;
	}

	.section5_div {
		display: flex;
		flex-direction: row;
		justify-content: center;
		gap: 50px;
		text-align: center;
		padding-top: 60px;
		padding-bottom: 100px;
	}

	.section5_div_div {
		width: 300px;
	}

	.section5 p {
		font-size: 1.5rem;
		padding-top: 5px;
	}

	.section5 h4 {
		font-size: 2rem;
		padding-bottom: 5px;
	}

	}

</style>