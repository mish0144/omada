import Animation from "../components/Animation.astro";

const url = "https://rjrzwvtomtixtkgbreek.supabase.co/rest/v1/testimonials?approved=is.true" ;
const key = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InJqcnp3dnRvbXRpeHRrZ2JyZWVrIiwicm9sZSI6ImFub24iLCJpYXQiOjE2Nzg3ODY0NjYsImV4cCI6MTk5NDM2MjQ2Nn0.xL82bX3yjouiljtJwGFBPE1uYP-6Mf8uenm2Idz_6Zo";

const response = await fetch(url,{
